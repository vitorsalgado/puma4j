root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
indent_size = 2
continuation_indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{groovy,java,kt,xml,json}]
max_line_length = 100

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[VERSION.txt]
insert_final_newline = false
